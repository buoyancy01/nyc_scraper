# 2Captcha Configuration
CAPTCHA_API_KEY=your_2captcha_api_key_here

# Proxy Configuration (comma-separated list)
# Format: protocol://username:password@host:port or protocol://host:port
PROXY_LIST=http://proxy1:8080,http://proxy2:8080,socks5://proxy3:1080

# Database Configuration (optional - for caching)
DATABASE_URL=sqlite:///./violations.db

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Application Settings
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
CACHE_DURATION=3600

# NYC API Configuration
NYC_API_BASE_URL=https://data.cityofnewyork.us/resource/nc67-uf89.json
NYC_API_LIMIT=1000

# Scraping Configuration
SCRAPER_HEADLESS=true
SCRAPER_TIMEOUT=60000
MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s